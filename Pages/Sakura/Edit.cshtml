@page
@model RestaurantReviewer.Pages.Sakura.EditModel
@{
    ViewData["Title"] = "Change Restaurant Information";
}

<h1 class="mt-5">@ViewData["Title"]</h1>
<hr />
<div class="row mt-5">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Restaurants.ID" />
        <div class="form-group mb-4">
            <span>Restaurant </span><label asp-for="Restaurants.Name" class="control-label"></label>
            <input asp-for="Restaurants.Name" class="form-control" style="font-size: 1em;" />
            <span asp-validation-for="Restaurants.Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="Restaurants.Rating" class="control-label"></label><span> (1 - 5)</span>
            <input asp-for="Restaurants.Rating" class="form-control" style="font-size: 1em;" />
            <span asp-validation-for="Restaurants.Rating" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="Restaurants.Type" class="control-label"></label><span> of Restaurant</span>
            <input asp-for="Restaurants.Type" class="form-control" style="font-size: 1em;" />
            <span asp-validation-for="Restaurants.Type" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="Restaurants.Description" class="control-label"></label>
            <textarea asp-for="Restaurants.Description" rows="5" class="form-control" style="font-size: 1em;"></textarea>
            <span asp-validation-for="Restaurants.Description" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="Restaurants.Cost" class="control-label"></label>
            <input asp-for="Restaurants.Cost" class="form-control" style="font-size: 1em;" />
            <span asp-validation-for="Restaurants.Cost" class="text-danger"></span>
        </div>
        <div class="form-group mb-5">
            <label asp-for="Restaurants.Reviews" class="control-label">Review</label>
            <textarea asp-for="Restaurants.Reviews" rows="5" class="form-control" style="font-size: 1em;"></textarea>
            <span asp-validation-for="Restaurants.Reviews" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save Change" class="btn btn-outline-danger" />
            <a asp-page="./Index" class="float-end">Back to List</a>
        </div>
    </form>
</div>
<style>
    body {
        font-family: fantasy;
        background-color: #F2F0EB;
    }
    main {
        font-size: 1.25rem;
    }
    a {
        color: black;
    }
    a:hover {
        color: red;
    }
    .form-control {
        font-family: Georgia;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
