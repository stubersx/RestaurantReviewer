@page
@model RestaurantReviewer.Pages.Jacob.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<style>
    body {
        background-color: saddlebrown;
    }

    #container a {
        color: white;
        text-decoration: none;
        border-radius: 8px;
        padding: 10px;
        background-color: grey;
    }

    #container a:hover {
        color: sandybrown;
    }
</style>
<div id="container">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div class="p-5 text-light bg-dark">
        <h4>Restaurants</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Restaurants.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Restaurants.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Restaurants.Rating)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Restaurants.Rating)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Restaurants.Type)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Restaurants.Type)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Restaurants.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Restaurants.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Restaurants.Cost)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Restaurants.Cost)
            </dd>
        </dl>
    
        <form method="post">
            <input type="hidden" asp-for="Restaurants.ID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>
</div>
