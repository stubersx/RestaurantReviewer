@page
@model RestaurantReviewer.Pages.Soren.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Restaurants</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Restaurants.ID" />
            <div class="form-group">
                <label asp-for="Restaurants.RestaurantPicture" class="control-label"></label>
                <input asp-for="Restaurants.RestaurantPicture" class="form-control" style="border: 2px solid orange; border-radius: 5px;" />
                <span asp-validation-for="Restaurants.RestaurantPicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurants.Name" class="control-label"></label>
                <input asp-for="Restaurants.Name" class="form-control" style="border: 2px solid orange; border-radius: 5px;" />
                <span asp-validation-for="Restaurants.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurants.Rating" class="control-label"></label>
                <input asp-for="Restaurants.Rating" class="form-control" style="border: 2px solid orange; border-radius: 5px;" />
                <span asp-validation-for="Restaurants.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurants.Type" class="control-label"></label>
                <input asp-for="Restaurants.Type" class="form-control" style="border: 2px solid orange; border-radius: 5px;" />
                <span asp-validation-for="Restaurants.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurants.Description" class="control-label"></label>
                <input asp-for="Restaurants.Description" class="form-control" style="border: 2px solid orange; border-radius: 5px;" />
                <span asp-validation-for="Restaurants.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurants.Cost" class="control-label"></label>
                <input asp-for="Restaurants.Cost" class="form-control" style="border: 2px solid orange; border-radius: 5px;" />
                <span asp-validation-for="Restaurants.Cost" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Save" class="btn" style="background-color: orange; color: white; padding: 5px 10px; border: none; border-radius: 5px;" />
            </div>
        </form>
    </div>
</div>
<p></p>
<div>
    <a asp-page="./Index" style="background-color: white; color: orange; padding: 5px 10px; border: 2px solid orange; border-radius: 5px; text-decoration: none;">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
